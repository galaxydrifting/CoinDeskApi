{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CoinDesk API (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/CoinDeskApi.Api/bin/Debug/net8.0/CoinDeskApi.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CoinDeskApi.Api",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5253"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch CoinDesk API (HTTPS)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CoinDeskApi.Api/bin/Debug/net8.0/CoinDeskApi.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CoinDeskApi.Api",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7048;http://localhost:5253"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch CoinDesk API (External Terminal - HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CoinDeskApi.Api/bin/Debug/net8.0/CoinDeskApi.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CoinDeskApi.Api",
            "console": "externalTerminal",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5253"
            }
        },
        {
            "name": "Launch CoinDesk API (Production Mode)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CoinDeskApi.Api/bin/Debug/net8.0/CoinDeskApi.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CoinDeskApi.Api",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production"
            }
        },
        {
            "name": "Attach to CoinDesk API",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}