    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CoinDesk API (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/CoinDeskApi.Api/bin/Debug/net8.0/CoinDeskApi.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CoinDeskApi.Api",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5253"
            }
        }
    ]
}