{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/CoinDeskApi.Api/CoinDeskApi.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/CoinDeskApi.Api/CoinDeskApi.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/CoinDeskApi.Api/CoinDeskApi.Api.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/CoinDeskApi.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/CoinDeskApi.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/CoinDeskApi.Tests/CoinDeskApi.Tests.csproj",
                "--logger",
                "trx",
                "--collect",
                "XPlat Code Coverage"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "ef-migrations-add",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationName}",
                "--project",
                "${workspaceFolder}/CoinDeskApi.Infrastructure/CoinDeskApi.Infrastructure.csproj",
                "--startup-project",
                "${workspaceFolder}/CoinDeskApi.Api/CoinDeskApi.Api.csproj"
            ],
            "options": {
                "cwd": "${workspaceFolder}/CoinDeskApi.Api"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "ef-database-update",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "${workspaceFolder}/CoinDeskApi.Infrastructure/CoinDeskApi.Infrastructure.csproj",
                "--startup-project",
                "${workspaceFolder}/CoinDeskApi.Api/CoinDeskApi.Api.csproj"
            ],
            "options": {
                "cwd": "${workspaceFolder}/CoinDeskApi.Api"
            },
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "description": "Enter migration name",
            "default": "NewMigration",
            "type": "promptString"
        }
    ]
}